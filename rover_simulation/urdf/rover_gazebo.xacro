<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"
       name="opportunity_sim">

  <!-- Include the real rover model -->
  <xacro:include filename="$(find rover_description)/urdf/rover.xacro"/>
  <xacro:opportunity_rover />

  <!-- All links require inertial tags for Gazebo -->
  <xacro:insert_inertials />

  <!-- ========================================= -->
  <!-- Gazebo ROS Control -->
  <!-- ========================================= -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so"/>
  </gazebo>

  <!-- ========================================= -->
  <!-- Gazebo Sensors -->
  <!-- ========================================= -->

  <!-- IMU -->
  <gazebo reference="imu_link">
    <sensor type="imu" name="imu_sensor">
      <update_rate>100</update_rate>
      <always_on>true</always_on>
      <topic>imu/data</topic>
      <plugin name="gazebo_ros_imu" filename="libgazebo_ros_imu.so"/>
    </sensor>
  </gazebo>

  <!-- GPS -->
  <gazebo reference="gps_link">
    <sensor type="gps" name="gps_sensor">
      <topic>gps/fix</topic>
    </sensor>
  </gazebo>

  <!-- Kinect RGB camera -->
  <gazebo reference="kinect_link">
    <sensor type="camera" name="rgb_camera">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
      </camera>
      <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
        <camera_name>rgb</camera_name>
        <frame_name>kinect_link</frame_name>
        <image_topic_name>/camera/rgb/image_color</image_topic_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Kinect Depth -->
  <gazebo reference="kinect_link">
    <sensor type="depth" name="depth_camera">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
        </image>
        <clip>
          <near>0.1</near>
          <far>10</far>
        </clip>
      </camera>
      <plugin name="gazebo_ros_depth_camera" filename="libgazebo_ros_openni_kinect.so">
        <depth_image_topic>/camera/depth/image_raw</depth_image_topic>
        <point_cloud_topic>/camera/depth/points</point_cloud_topic>
      </plugin>
    </sensor>
  </gazebo>

</robot>
